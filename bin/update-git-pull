# git pull for typical directories
if command -v git >/dev/null 2>&1; then
  config_dir=$(config_home)"/update/update-git-pull"
  if [ -d "$config_dir" ]; then
    for config_file in $(find "$config_dir" -type f); do
      for line in $(cat "$config_file"); do
        if [ -d "$config_line" ]; then
          if [ -w "$config_line" ]; then
            cd "$config_line" && git pull
          else
            err "err update-git-pull config_dir:$config_dir config_file:$config_file config_line:$config_line"
          fi
        fi
      done
    done
  fi
fi
